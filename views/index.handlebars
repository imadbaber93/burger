<h1>BURGERS!</h1>

<img src="../assets/img/hqdefault.jpg">

<h2>eat da burger!</h2>

<h2>Burgers Not Yet Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR!</button>
        </form>

         </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit"> Devour A New Burger!</button>
        </form>
         </li>
    {{/if}}
  {{/each}}
</ul>

<h2> Add aBurger</h2>
<form class ="create-update-form" action="/" method ="POST">

  <div class ="form-group">
    <label for="burger">Burger Name:</label>
    <input type = "text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>